<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_View"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:id="@+id/imgBackgrond2"
            android:src="@drawable/ejemplo1"/>
        <TextView
            android:id="@+id/textoTile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgBackgrond2"
            android:background="#6A000000"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Retos sustentables."/>
        <TextView
            android:id="@+id/descripcion2"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textoTile2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Participa en los retos sustentables junto con tus compañeros y profesores..."
            android:maxLines="2"/>
        <Button
            android:id="@+id/btnInformacion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripcion2"
            android:text="Ver más"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>